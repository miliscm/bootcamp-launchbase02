{% extends "layout.njk" %}
{% block content%}
  <form class="cadastros" method="POST" action="/teachers">
    <section class="image" style="width: 400px; min-height: 400px; background-image: url('https://source.unsplash.com/collection/1486124/400x400'); background-repeat: no-repeat; background-size: cover;"></section>
    <section class="inform">
      <div class="title">
        <h3>Cadastro de Professores</h3>
      </div>
      <div class="item">
        <div>Avatar Professor</div>
        <div><input type="text" name="avatar_url" placeholder="http://"></div>
      </div>
      <div class="item">
        <div>Nome Completo</div>
        <div><input type="text" name="name" placeholder="Digite o nome completo"></div>
      </div>
      <div class="item">
        <div>Data de Nascimento</div>
        <div><input type="date" name="datanascimento"></div>
      </div>
      <div class="item">
        <div>Grau de escolaridadade</div>
        <div>
          <select name="degress">
            <span>
              <option value="Fundamental" selected="selected">Fundamental</option>
            </span>
            <span>
              <option value="Segundo Grau">Segundo Grau</option>
            </span>
            <span>
              <option value="Superior">Superior</option>
            </span>
            <span>
              <option value="Pós-Graduação">Pós-Graduação</option>
            </span>
          </select>
        </div>
      </div>
      <div class="item">
        <div>Tipo de Aula</div>
        <div>
          <span><input type="radio" name="tipo_aula" value="Presencial">Presencial</span>
          <span><input type="radio" name="tipo_aula" value="Online">Online</span>
        </div>

      </div>
      <div class="item">
        <div>Acompanhamento</div>
        <div>
          <input type="text" name="acompanhamentos" placeholder="Separe os acompanhamentos por vírgula">
        </div>
      </div>
      <button type="submit">Salvar</button>
      <button type="reset">Limpar</button>
    </section>
  </div>

{% endblock %}